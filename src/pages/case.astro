---
import Layout from "@layouts/Layout.astro";
import CaseStudyArticle from "@components/CaseStudyArticle.astro";
import HeroBgWrapper from "@components/helpers/HeroBgWrapper.astro";
---

<Layout>
  <HeroBgWrapper imagePath="caseheader.png" class="full-width">
    <header>
      <p>Case Studies</p>
      <h1>Taxes & Efficiency</h1>
    </header>
  </HeroBgWrapper>

  <CaseStudyArticle />
</Layout>

<style>
  header {
    display: inline-flex;
    padding: 3rem 3.75rem;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-2xs);

    border-radius: 1.8125rem;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(5.5px);

    h1 {
      font-size: var(--step-0);
      font-weight: 700;
    }

    p {
      font-size: var(--step--5);
      /* font-weight: 700; */
      text-transform: uppercase;
      border-radius: 1.25rem;
      background: #ffcc4a;

      padding: 0 0.9375rem;
    }
  }
</style>
