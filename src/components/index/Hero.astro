---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero full-bleed">
  <div class="hero-content">
    <h1>Empowering Your Business Growth</h1>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <a href="#0">Book a Meeting</a>
  </div>
  <Image src={CEOImage} alt="CEO" class="bleed-right" />
</section>

<Services />

<style>
  section {
    color: white;
    background-color: black;
    display: grid;
    grid-template-columns: subgrid;
    gap: var(--space-m);
    background-image: url(/src/assets/images/Pattern.png);
    background-size: 20%;
    background-repeat: no-repeat;
    background-position-y: center;
    background-position-x: -9rem;

    img {
      grid-column: 3 / full-end;
    }
    .hero-content {
      grid-column: content-start / middle;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
      gap: var(--space-s);

      h1 {
        font-size: var(--step-0);
        font-weight: 500;
      }

      p {
        font-size: var(--step--5);
      }

      a {
        border-radius: 2.625rem;
        background: #fff;
        padding: 1rem 1.9375rem;
        text-decoration: none;
        color: black;
      }
    }
  }
</style>
