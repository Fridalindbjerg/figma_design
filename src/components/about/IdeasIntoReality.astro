<style>
  section {
    margin: var(--space-xl) 0;

    article {
      display: flex;
      justify-content: space-evenly;
      margin-top: var(--space-xl);
    }

    div:has(p + p) p:first-child {
      font-size: var(--step-0);
      font-weight: 400;
    }

    .wrapper {
      display: flex;
      flex-direction: row-reverse;

      gap: var(--space-2xl);

      > div {
        display: flex;
        flex-direction: column;
        gap: var(--space-s);

        > div > p:first-child {
          text-transform: uppercase;
          margin-bottom: var(--space-xs);
        }
      }

      figure {
        background-image: url("/src/assets/images/Pattern.png");
        z-index: -2;
        background-size: 40%;
        background-repeat: no-repeat;
        margin-inline: auto;
        display: grid;
        position: relative;

        &::after {
          content: "";
          position: absolute;
          top: 0rem;
          left: 5rem;
          background: green;
          border-radius: 30px;
          width: 150px;
          aspect-ratio: 1/1;
          z-index: -1;
        }

        img {
          justify-self: end; /* h√∏jre */
          align-self: end; /* nederst */
          border-radius: 50px;

          inline-size: 75%;
          border-radius: 40px;
        }
      }

      h2 {
        margin-bottom: var(--space-xs);
        font-size: var(--step--1);
      }

      ul {
        display: flex;
        flex-direction: column;
        gap: var(--space-s);
        padding: 0;
      }
      li {
        list-style: none;
        display: flex;
        gap: var(--space-s);
      }

      .check {
        color: green;
      }
    }
  }
</style>
